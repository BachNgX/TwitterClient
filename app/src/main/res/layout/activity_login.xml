        android:layout_marginRight="11dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/button"
        android:padding="15dp"
        android:text="Log in"
        android:textAllCaps="false"
        android:textColor="@color/colorbar"
        android:textStyle="bold" />

